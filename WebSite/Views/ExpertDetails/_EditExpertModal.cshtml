@model ExpertViewModel;
<div id="expertModal" class="modal modal-background closeModal" 
    hx-swap="delete"
    hx-target="this"
    hx-get=""
    hx-trigger="click target:.closeModal">
    <div class="modal-window">
        <div class="closeModalButton closeModal">
            <img class="closeModal" src="images/svg/x.svg"></img>
        </div>
        <div class="modal-textbox">
            <div class="row">
                <div class="four columns">
                    <img id="expertImage" src="images/@(Model.Id).jpg" class="u-max-full-width" />
                </div>
                <div class="eight columns">
                    <span class="expert-name">@Model.FirstName @Model.LastName</span><br />
                    <span class="role">@Model.Role</span>
                </div>
            </div>
            <form>
                <div class="row" id="DescriptionEdit">
                    <textarea  name="Description">@Model.Description</textarea>
                    <button
                    hx-swap="delete"
                    hx-target="#expertModal"
                    hx-post="ExpertDetails/Edit/@Model.Id">
                        Save
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>