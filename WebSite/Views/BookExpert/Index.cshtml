@using (Html.BeginForm("Book", "BookExpert", FormMethod.Post))
{
    <div class="section">
        @{ await Html.RenderPartialAsync("_BookExpertForm"); }
        <div class="row form-row">
            <div class="twelve columns">
                <button id="submit-button" type="submit" class="submitButton loading" >Bestill</button>
            </div>
        </div>
    </div>            
}
@section Scripts
{
    <script>
        $('form').submit(function(event){
            $('.submitButton').prop('disabled', true);
            $('.submitButton').html(". . .");
        })
    </script>
}