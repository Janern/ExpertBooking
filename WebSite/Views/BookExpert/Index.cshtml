@{
    ViewData["Title"] = "AnyShore | Book ekspert";
}
@using (Html.BeginForm("Book", "BookExpert", FormMethod.Post))
{
    <div class="section">
        <div class="container">
            <div class="row">
                <div class="four columns float-right">
                    <label for="TypeOfExpert">Type ressurs:</label>
                </div>
                <div class="four columns">
                    <select id="TypeOfExpert" class="u-full-width">
                        <option value=".net">.Net</option>
                        <option value="java">Java</option>
                        <option value="ux">UX</option>
                        <option value="tester">Tester</option>
                        <option value="python">Python</option>
                        <option value="frontend">Frontend</option>
                    </select>
                </div>
            </div>
            <div class="row">
                <div class="four columns float-right">
                    <label for="RoleOfExpert">Rolle:</label>
                </div>
                <div class="four columns">
                    <select id="TypeOfExpert" class="u-full-width">
                        <option value="leader">Prosjektleder</option>
                        <option value="senior">Senior</option>
                        <option value="junior">Junior</option>
                    </select>
                </div>
            </div>
            <div class="row">
                <div class="four columns float-right">
                    <label for="ExpectedTimePeriod">Forventet periode:</label>
                </div>
                <div class="four columns">
                    <input type="text" name="ExpectedTimePeriod" value=""/>
                </div>
            </div>
            <div class="row">
                <div class="four columns float-right">
                    <label for="BookerEmailAddress">Din Epostadresse:</label>
                </div>
                <div class="four columns">
                    <input type="text" name="BookerEmailAddress" value="" />
                </div>
            </div>
            <div class="row">
                <div class="twelve columns">
                    <input type="submit" class="button-primary" value="Bestill"/> 
                </div>
            </div>
        </div>
    </div>
}
@section scripts {
    <script> 
        $('input[name="ExpectedTimePeriod"]').daterangepicker();
   </script>
}